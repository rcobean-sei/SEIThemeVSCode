  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#705E74", "fontStyle": "italic" }
    },
    {
      "name": "String",
      "scope": ["string", "string.quoted", "string.template"],
      "settings": { "foreground": "#901226" }
    },
    {
      "name": "HTML Attribute Value - Must come after String",
      "scope": [
        "string.quoted.double.html",
        "string.quoted.single.html",
        "meta.attribute-with-value.html string",
        "meta.tag.inline.any.html string.quoted",
        "meta.tag.other.html string.quoted",
        "meta.attribute.html string",
        "meta.tag string.quoted",
        "meta.tag.html string",
        "text.html string.quoted"
      ],
      "settings": { "foreground": "#141018" }
    },
    {
      "name": "String Escape",
      "scope": ["constant.character.escape", "string.regexp"],
      "settings": { "foreground": "#F01840" }
    },
    {
      "name": "Number",
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#C01830" }
    },
    {
      "name": "Boolean",
      "scope": ["constant.language.boolean"],
      "settings": { "foreground": "#C01830" }
    },
    {
      "name": "Constant",
      "scope": ["constant", "constant.language", "constant.other"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Keyword",
      "scope": ["keyword", "keyword.control", "keyword.operator.expression"],
      "settings": { "foreground": "#F01840", "fontStyle": "bold" }
    },
    {
      "name": "Keyword Operator",
      "scope": ["keyword.operator", "keyword.operator.assignment"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Storage",
      "scope": ["storage", "storage.type", "storage.modifier"],
      "settings": { "foreground": "#F01840" }
    },
    {
      "name": "Class",
      "scope": ["entity.name.class", "entity.name.type.class", "support.class"],
      "settings": { "foreground": "#402848", "fontStyle": "bold" }
    },
    {
      "name": "Function",
      "scope": ["entity.name.function", "support.function"],
      "settings": { "foreground": "#901226" }
    },
    {
      "name": "Function Call",
      "scope": ["meta.function-call"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Function Parameter",
      "scope": ["variable.parameter", "meta.parameter"],
      "settings": { "foreground": "#705E74", "fontStyle": "italic" }
    },
    {
      "name": "Variable",
      "scope": ["variable", "variable.other"],
      "settings": { "foreground": "#2A1C30" }
    },
    {
      "name": "Variable Property",
      "scope": ["variable.other.property", "variable.other.object.property"],
      "settings": { "foreground": "#402848" }
    },
    {
      "name": "Type",
      "scope": ["entity.name.type", "support.type"],
      "settings": { "foreground": "#901226" }
    },
    {
      "name": "Interface",
      "scope": ["entity.name.type.interface"],
      "settings": { "foreground": "#901226" }
    },
    {
      "name": "Namespace",
      "scope": ["entity.name.namespace", "entity.name.type.module"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Tag",
      "scope": ["entity.name.tag", "meta.tag"],
      "settings": { "foreground": "#F01840" }
    },
    {
      "name": "Tag Attribute",
      "scope": ["entity.other.attribute-name"],
      "settings": { "foreground": "#705E74", "fontStyle": "italic" }
    },
    {
      "name": "Punctuation Tag",
      "scope": ["punctuation.definition.tag"],
      "settings": { "foreground": "#A0949E" }
    },
    {
      "name": "Punctuation",
      "scope": ["punctuation", "meta.brace"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Support",
      "scope": ["support", "support.constant"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Entity",
      "scope": ["entity.other"],
      "settings": { "foreground": "#600C1C" }
    },
    {
      "name": "CSS Property",
      "scope": ["support.type.property-name.css", "support.type.vendored.property-name.css"],
      "settings": { "foreground": "#402848" }
    },
    {
      "name": "CSS Value",
      "scope": ["support.constant.property-value.css"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "CSS Unit",
      "scope": ["keyword.other.unit.css"],
      "settings": { "foreground": "#C01830" }
    },
    {
      "name": "CSS Selector",
      "scope": ["entity.other.attribute-name.class.css", "entity.other.attribute-name.id.css"],
      "settings": { "foreground": "#F01840" }
    },
    {
      "name": "JSON Key",
      "scope": ["support.type.property-name.json"],
      "settings": { "foreground": "#901226" }
    },
    {
      "name": "JSON Value",
      "scope": ["string.quoted.double.json"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Markdown Heading",
      "scope": ["markup.heading", "entity.name.section.markdown"],
      "settings": { "foreground": "#C01830", "fontStyle": "bold" }
    },
    {
      "name": "Markdown Bold",
      "scope": ["markup.bold"],
      "settings": { "foreground": "#141018", "fontStyle": "bold" }
    },
    {
      "name": "Markdown Italic",
      "scope": ["markup.italic"],
      "settings": { "foreground": "#705E74", "fontStyle": "italic" }
    },
    {
      "name": "Markdown Link Text",
      "scope": ["markup.underline.link"],
      "settings": { "foreground": "#F01840" }
    },
    {
      "name": "Markdown Link URL",
      "scope": ["string.other.link.title.markdown", "markup.underline.link.string"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Markdown Code",
      "scope": ["markup.inline.raw", "markup.fenced_code"],
      "settings": { "foreground": "#402848" }
    },
    {
      "name": "Markdown Quote",
      "scope": ["markup.quote"],
      "settings": { "foreground": "#A0949E", "fontStyle": "italic" }
    },
    {
      "name": "Markdown List",
      "scope": ["markup.list", "punctuation.definition.list"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Invalid",
      "scope": ["invalid", "invalid.illegal"],
      "settings": { "foreground": "#FFFFF8", "background": "#F01840" }
    },
    {
      "name": "Deprecated",
      "scope": ["invalid.deprecated"],
      "settings": { "foreground": "#FFFFF8", "background": "#901226" }
    },
    {
      "name": "Diff Added",
      "scope": ["markup.inserted", "meta.diff.header.to-file"],
      "settings": { "foreground": "#705E74" }
    },
    {
      "name": "Diff Removed",
      "scope": ["markup.deleted", "meta.diff.header.from-file"],
      "settings": { "foreground": "#F01840" }
    },
    {
      "name": "Diff Changed",
      "scope": ["markup.changed"],
      "settings": { "foreground": "#A0949E" }
    },
    {
      "name": "HTML Attribute Value - Final Override",
      "scope": ["meta.tag string.quoted.double", "meta.tag string.quoted.single", "entity.other.attribute-name + string"],
      "settings": { "foreground": "#141018" }
    }
  ],
  "semanticTokenColors": {
    "class": "#402848",
    "interface": "#901226",
    "type": "#901226",
    "enum": "#901226",
    "enumMember": "#705E74",
    "struct": "#402848",
    "function": "#901226",
    "method": "#901226",
    "macro": "#F01840",
    "variable": "#2A1C30",
    "variable.readonly": "#705E74",
    "variable.defaultLibrary": "#705E74",
    "parameter": { "foreground": "#705E74", "fontStyle": "italic" },
    "property": "#402848",
    "property.readonly": "#705E74",
    "namespace": "#705E74",
    "keyword": "#F01840",
    "comment": { "foreground": "#705E74", "fontStyle": "italic" },
    "string": "#901226",
    "number": "#C01830",
    "regexp": "#F01840",
    "operator": "#705E74"
  }
}



